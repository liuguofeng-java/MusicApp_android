<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ripple_bg"
    android:minHeight="45dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp">

        <View
            android:id="@+id/menu_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/vector_scan_qr_code" />

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="我的消息"
            android:textColor="@color/color_default_text"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/menu_sub_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="投票选出最强Beat!"
            android:textColor="@color/color_sub_text"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/menu_msg_num"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_round_bg"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <View
            android:id="@+id/right_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/menu_switch"
            android:background="@drawable/vector_fine_right_arrow"
            android:gravity="center" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/menu_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />
    </LinearLayout>


</RelativeLayout>